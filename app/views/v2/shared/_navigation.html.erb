<!-- Navbar starts here -->
<nav class='fixed top-0 left-0 z-50 w-full' data-controller='navbar'>
  <div class='w-full px-5 md:px-12 py-5 grid grid-cols-3 gap-4 duration-500 transform -translage-y-full' data-navbar-target='nav'>
    <span class='flex justify-start'>
      <%= button_tag '', class: "#{navbar_color_scheme.include?(controller_name.titleize) ? 'text-black' : 'text-neoma-pink-1 hover:text-[#f7b1af] transition-all duration-500' } cursor-hover fa-solid fa-bars", data: { action: 'click->navbar#toggleMenu' } %>
    </span>

    <span class='flex justify-center'>
      <%= link_to v2_root_path, class: 'w-[200px] hidden sm:flex justify-center items-center' do %>
        <%= image_tag asset_path("#{navbar_color_scheme.include?(controller_name.titleize) ? 'text_horizontal_black.svg' : 'text_horizontal_white.svg'}") %>
      <% end %>
    </span>

    <span class='flex justify-end'>
      <%= link_to t('buttons.inquire_now'), main_app.show_sidemodal_artwork_modals_path, class: 'bg-neoma-pink-1 text-black text-nowrap font-montserrat text-xs text-right w-min px-4 py-1 transition-all duration-500 hover:bg-[#f7b1af]', data: { turbo: true, turbo_stream: true } %>
    </span>
  </div>
  <div class='fixed top-0 left-0 w-full h-screen max-w-[100%] md:max-w-[40%] lg:max-w-[20%] bg-neoma-blue-4 flex flex-col p-10 duration-500 transform -translate-x-full shadow-lg' data-navbar-target='menu'>
    <span class='absolute top-4 right-4 md:right-8 md:top-8'>
      <%= button_tag '', class: 'text-xl text-white cursor-hover fa-solid fa-xmark', data: { action: 'click->navbar#toggleMenu' } %>
    </span>

    <div id='#menu' class='px-4 min-h-screen flex items-center justify-center py-24 overflow-auto hidden-scroll'>
      <span class='px-10 md:px-0'>
        <ul class='flex flex-col items-center md:items-start text-3xl text-center md:text-left [&_li]:transition-colors  [&_a]:block [&_a]:py-2'>
          <% v2_main_nav_items.each do |title, path| %>
            <%= link_to t("title.#{title}"), path, class: 'font-restora text-3xl text-white transition-color duration-500 hover:text-[#f7b1af] text-center md:text-start font-light cursor-hover my-3' %>
          <% end %>
        </ul>
      </span>
    </div>
  </div>
</nav>
<!-- Navbar ends here -->
