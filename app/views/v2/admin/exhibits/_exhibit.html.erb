<tr>
  <td class='border-stroke border-t py-5 px-5 pl-10'>
    <%= link_to v2_exhibit_path(exhibit), class: 'text-base font-medium text-nowrap' do %>
      <i class='fa-solid fa-eye mr-5'></i>
      <%= exhibit.title %>
    <% end %>
  </td>

  <td class='border-stroke border-t py-5 px-4'>
    <p class='text-body-color text-base'>
      <%= format_date_range(exhibit.start_date, exhibit.end_date) %>
    </p>
  </td>

  <td class='border-stroke border-t py-5 px-4'>
    <p class='text-body-color text-sm flex flex-nowrap items-center text-nowrap'>
      <%= exhibit.status.titleize %>
      <% if exhibit.featured_item %>
        <i class='fa-solid fa-star ml-1'></i>
      <% end %>
    </p>
  </td>

  <td class='border-stroke border-t py-5 px-4 pr-10 text-center flex flex-row'>
    <%= link_to edit_v2_admin_exhibit_path(exhibit.id), class: 'text-green mr-5' do %>
      <i class='fa-solid fa-pen-to-square'></i>
    <% end %>
    <%= button_to v2_admin_exhibit_path(exhibit.id), class: 'text-red-500', method: :delete do %>
      <i class='fa-solid fa-trash'></i>
    <% end %>
  </td>
</tr>
