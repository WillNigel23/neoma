<div class='w-full flex items-center justify-between mt-10 reveal' data-scroll-reveal-target='item' data-delay='250ms'>
  <h2 class='font-restora font-bold flex-1'> <%= t('title.galleries') %> </h2>
  <%= link_to t('buttons.view_all'), v2_galleries_path, class: 'text-xs font-medium hover:text-[#f7b1af] transition-all duration-500' %>
</div>

<hr class='w-full my-5 reveal' data-scroll-reveal-target='item' data-delay='500ms'>

<div class='grid grid-cols-1 md:grid-cols-2 gap-5 w-full mt-5'>
  <div class='relative flex flex-col'>
    <%= fe_featured_item_link(v2_gallery_path(main_gallery)) do %>
      <%= fe_featured_item_content_wrapper() do %>
        <%= fe_featured_item_image_wrapper do %>
          <%= fe_featured_item_image_v2(main_gallery.banner) %>
        <% end %>
        <%= fe_featured_item_title(main_gallery.title) %>
        <%= fe_featured_item_subtitle(main_gallery.description) if main_gallery.description %>
      <% end %>
    <% end %>
  </div>
  <div class='grid grid-cols-1 md:grid-cols-2 gap-5 w-full'>
    <% if sub_galleries.any? %>
      <% sub_galleries.in_groups_of((sub_galleries.length / 2.0).ceil) do |group| %>
        <div class='flex flex-col w-full'>
          <% group.compact.each do |gallery| %>
            <%= fe_featured_item_link(v2_gallery_path(gallery), opts: { class: 'mb-5' }) do %>
              <%= fe_featured_item_content_wrapper() do %>
                <%= fe_featured_item_image_wrapper do %>
                  <%= fe_featured_item_image(gallery.banner) %>
                <% end %>
                <%= fe_featured_item_title(gallery.title) %>
                <%= fe_featured_item_subtitle(gallery.description) if gallery.description %>
              <% end %>
            <% end %>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
