<div class='w-full flex items-center justify-between mt-10 reveal' data-scroll-reveal-target='item' data-delay='250ms'>
  <h2 class='font-restora font-bold flex-1'> <%= t('title.events') %> </h2>
  <%= link_to t('buttons.view_all'), v2_articles_path, class: 'text-xs font-medium hover:text-[#f7b1af] transition-all duration-500' %>
</div>

<hr class='w-full my-5 reveal' data-scroll-reveal-target='item' data-delay='500ms'>

<div class='grid grid-cols-1 md:grid-cols-2 gap-5 w-full mt-5'>
  <div class='relative flex flex-col'>
    <%= fe_featured_item_link(v2_article_path(main_article)) do %>
      <%= fe_featured_item_content_wrapper() do %>
        <%= fe_featured_item_image_wrapper do %>
          <%= fe_featured_item_image_v2(main_article.banner) %>
        <% end %>
        <%= fe_featured_item_title(main_article.title) %>
        <%= fe_featured_item_subtitle(main_article.subtitle) if main_article.subtitle %>
      <% end %>
    <% end %>
  </div>
  <div class='grid grid-cols-1 md:grid-cols-2 gap-5 w-full'>
    <% if sub_articles.any? %>
      <% sub_articles.in_groups_of((sub_articles.length / 2.0).ceil) do |group| %>
        <div class='flex flex-col w-full'>
          <% group.compact.each do |article| %>
            <%= fe_featured_item_link(v2_article_path(article), opts: { class: 'mb-5' }) do %>
              <%= fe_featured_item_content_wrapper() do %>
                <%= fe_featured_item_image_wrapper do %>
                  <%= fe_featured_item_image(article.banner) %>
                <% end %>
                <%= fe_featured_item_title(article.title) %>
                <%= fe_featured_item_subtitle(article.subtitle) if article.subtitle %>
              <% end %>
            <% end %>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
