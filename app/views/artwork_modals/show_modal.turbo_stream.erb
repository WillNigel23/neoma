<turbo-stream action='replace' target='modal'>
  <template>
    <%= turbo_frame_tag 'modal' do %>
      <div class='fixed top-5 right-5 z-[101]'>
        <%= link_to main_app.close_modal_artwork_modals_path, data: { turbo: true, turbo_stream: true } do %>
          <i class='text-xl text-black cursor-hover fa-solid fa-xmark'></i>
        <% end %>
      </div>
      <div class='fixed top-0 left-0 z-[100] bg-white w-screen h-screen' data-controller='scroll-reveal'>
        <div class='flex flex-col justify-center items-center h-screen w-screen'>
          <div class='swiper swiper-initialized swiper-horizontal swiper-pointer-events swiper-backface-hidden container reveal'
            data-controller='carousel'
            data-scroll-reveal-target='item'
            data-delay='500ms'
            data-carousel-options-value='
                    {
                    "navigation": {
                      "nextEl": ".swiper-button-next",
                      "prevEl": ".swiper-button-prev"
                    },
                    "effect": "fade",
                    "fadeEffect": {
                      "crossFade": "true"
                    }
                }'
            >
            <div class='swiper-wrapper py-10'>
              <div class="swiper-button-prev"></div>
              <div class="swiper-button-next"></div>
              <% @artworks.each do |artwork| %>
                <div class='swiper-slide'>
                  <div class='grid grid-cols-1 md:grid-cols-2 w-full container px-5'>
                    <span class='w-full flex justify-center md:justify-start items-center'>
                      <%= image_tag(url_for(artwork.content(:image).spina_image.file), class: 'object-contain max-h-[825.6px]') %>
                    </span>
                    <span class='w-full flex flex-col justify-between items-start md:items-end py-10'>
                      <h1 class='uppercase font-bold text-xl md:text-3xl'>
                        <%= artwork.content(:featured_artist)[0].content(:header) %>
                      </h1>
                      <div class='flex flex-col items-start md:items-end'>
                        <h2 class='italic text-xl md:text-3xl mb-2'>
                          <%= artwork.content(:header) %>
                        </h2>

                        <p class='text-lg mb-5'>
                        <%= artwork.content(:price) %>
                        </p>

                        <div class='text-sm flex flex-col items-start md:items-end'>
                          <%= artwork.content.html(:body) %>
                        </div>
                      </div>
                      <div class='flex flex-row mt-5'>
                        <%= fe_banner_link(t('buttons.inquire_now'), '') %>
                      </div>
                    </span>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </template>
</turbo-stream>
