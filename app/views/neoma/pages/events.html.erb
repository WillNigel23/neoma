<%= render partial: 'neoma/shared/scroll_nav', locals: { menu_items: event_scroll_nav_items } %>

<!-- Events start here -->
<section class='w-full bg-white z-20'>
  <section class='container w-full py-5 md:py-10 mx-auto mt-28 px-5 bg-white min-h-screen' data-controller='scroll-reveal'>
    <h1 class='font-bold text-black text-4xl md:text-7xl lg:text-9xl mb-10 uppercase reveal' data-scroll-reveal-target='item'> <%= t('title.events') %> </h1>

    <div id='#ongoing' class='w-full mb-10'>
      <h2 class='font-bold reveal' data-scroll-reveal-target='item'> <%= t('title.ongoing') %> </h2>
      <hr class='w-full my-5'>
      <div class='grid grid-cols-1 md:grid-cols-2 gap-5'>
        <% ongoing_events.each do |event| %>
          <%= event.content.image_tag(:banner, {}, { class: 'reveal', data: { scroll_reveal_target: 'item' } }) %>

          <span class='flex flex-col w-full my-auto py-5 px-0 md:px-5'>
            <p class='text-gray-600 text-light text-sm reveal' data-scroll-reveal-target='item'>
              <%= [event.content(:start_date), event.content(:end_date)].compact.join(' - ') %>
            </p>
            <h4 class='font-bold text-xl md:text-3xl my-5 reveal' data-scroll-reveal-target='item'>
              <%= event.content(:header) %>
            </h4>
            <p class='text-light reveal' data-scroll-reveal-target='item'>
              <%= event.content(:subheader) %>
            </p>
            <%= simple_format event.content(:summary), { class: 'text-light text-xs my-5 reveal', data: { scroll_reveal_target: 'item' } } %>
            <%= fe_banner_link(t('buttons.read_more'), event.materialized_path) %>
          </span>
        <% end %>
      </div>
    </div>
    <div id='#past' class='w-full mb-10'>
      <h2 class='font-bold reveal' data-scroll-reveal-target='item'> <%= t('title.past') %> </h2>
      <hr class='w-full my-5'>
      <div class='grid grid-cols-1 md:grid-cols-2 gap-5'>
        <% past_events.each do |event| %>
          <%= event.content.image_tag(:banner, {}, { class: 'reveal', data: { scroll_reveal_target: 'item' } }) %>

          <span class='flex flex-col w-full my-auto py-5 px-0 md:px-5'>
            <p class='text-gray-600 text-light text-sm reveal' data-scroll-reveal-target='item'>
              <%= [event.content(:start_date), event.content(:end_date)].compact.join(' - ') %>
            </p>
            <h4 class='font-bold text-xl md:text-3xl my-5 reveal' data-scroll-reveal-target='item'>
              <%= event.content(:header) %>
            </h4>
            <p class='text-light reveal' data-scroll-reveal-target='item'>
              <%= event.content(:subheader) %>
            </p>
            <%= simple_format event.content(:summary), { class: 'text-light text-xs my-5 reveal', data: { scroll_reveal_target: 'item' } } %>
            <%= fe_banner_link(t('buttons.read_more'), event.materialized_path) %>
          </span>
        <% end %>
      </div>
    </div>
  </section>
</section>
