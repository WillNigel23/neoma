<!-- Navbar starts here -->
<nav class='fixed top-0 left-0 z-50 w-full' data-controller='navbar'>
  <div class='w-full px-5 md:px-12 py-5 grid grid-cols-3 gap-4 duration-500 transform -translage-y-full' data-navbar-target='nav'>
    <span class='flex justify-start'>
      <%= button_tag '', class: "#{navbar_color_scheme.include?(current_page.to_s) ? 'text-black' : 'text-white' } cursor-hover fa-solid fa-bars", data: { action: 'click->navbar#toggleMenu' } %>
    </span>

    <span class='flex justify-center'>
      <%= link_to root_path, class: 'w-[200px] hidden sm:flex justify-center items-center' do %>
        <%= image_tag asset_path("#{navbar_color_scheme.include?(current_page.to_s) ? 'text_horizontal_black.svg' : 'text_horizontal_white.svg'}") %>
      <% end %>
    </span>

    <span class='flex justify-end'>
      <%= button_to t('buttons.inquire_now'), '',
        method: :post,
        class: 'bg-neoma-pink-1 text-black text-nowrap font-montserrat text-xs text-right w-min px-4 py-1 transition-all duration-500 hover:bg-[#f7b1af]'%>
    </span>
  </div>
  <div class='absolute top-0 left-0 w-full h-screen max-w-[100%] md:max-w-[40%] lg:max-w-[20%] bg-neoma-blue-4 flex flex-col p-10 duration-500 transform -translate-x-full' data-navbar-target='menu'>
    <span class='flex justify-end mb-32'>
      <%= button_tag '', class: 'text-xl text-white cursor-hover fa-solid fa-xmark', data: { action: 'click->navbar#toggleMenu' } %>
    </span>

    <div class='flex items-center justify-center w-full px-4 py-24'>
      <span class='flex flex-col px-10 md:px-0'>
        <% main_nav_items.each do |nav_item| %>
          <%= link_to nav_item.menu_title, nav_item.materialized_path, class: 'text-3xl text-white transition-color duration-500 hover:text-[#f7b1af] text-center md:text-start font-light cursor-hover my-3' %>
        <% end %>
      </span>
    </div>
  </div>
</nav>
<!-- Navbar ends here -->
