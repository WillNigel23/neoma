<div class="border-b border-gray-200 flex items-center justify-between space-x-8 px-4 py-3">
  <div class="flex items-center">
    <div class="font-medium"><%= mail.email %></div>
  </div>

  <div class="flex-1"></div>

  <div class='flex flex-row'>
    <%= link_to spina.edit_admin_mailinglist_path(mail), class: "btn btn-default px-3", style: "margin-right: 0.5rem;" do %>
      <%= heroicon('pencil', style: :solid, class: 'w-4 h-4') %>
    <% end %>
    <%= button_to spina.admin_mailinglist_path(mail), class: "btn btn-default px-3", method: :delete do %>
      <%= heroicon('trash', style: :solid, class: 'text-red-500 w-4 h-4') %>
    <% end %>
  </div>
</div>
